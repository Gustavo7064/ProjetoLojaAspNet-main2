<link rel="stylesheet" href="~/css/sitedejogos.css" />

<div class="dg-page" data-theme="dark">
    <!-- Fundo criativo roxo -->
    <div class="bg-blobs" aria-hidden="true">
        <span class="blob b1"></span>
        <span class="blob b2"></span>
        <span class="blob b3"></span>
    </div>

    <!-- Hero compacto -->
    <section class="hero">
        <div class="hero-copy">
            <h1>Catálogo RocketGames</h1>
            <p>Seleção curada com descontos, lançamentos e clássicos indispensáveis.</p>
            <div class="chip-row" id="chip-row" role="tablist" aria-label="Categorias rápidas">
                <button class="chip is-active" data-genre="">Tudo</button>
                <button class="chip" data-genre="Ação">Ação</button>
                <button class="chip" data-genre="Aventura">Aventura</button>
                <button class="chip" data-genre="RPG">RPG</button>
                <button class="chip" data-genre="Tiro">Tiro</button>
                <button class="chip" data-genre="Indie">Indie</button>
                <button class="chip" data-genre="Luta">Luta</button>
                <button class="chip" data-genre="Battle Royale">Battle Royale</button>
            </div>
        </div>
    </section>

    <!-- Toolbar (filtros) -->
    <header class="dg-toolbar" role="region" aria-label="Filtros e busca">
        <div class="toolbar-left">
            <div class="field search">
                <input type="search" id="f-search" placeholder="Buscar por título..." autocomplete="off" />
            </div>

            <div class="field select">
                <label for="f-genre">Gênero</label>
                <select id="f-genre">
                    <option value="">Todos</option>
                    <option>Ação</option>
                    <option>Aventura</option>
                    <option>RPG</option>
                    <option>Tiro</option>
                    <option>Indie</option>
                    <option>Luta</option>
                    <option>Battle Royale</option>
                </select>
            </div>

            <div class="field checkset" aria-label="Plataformas">
                <span class="legend">Plataforma</span>
                <label><input type="checkbox" class="f-platform" value="PC" checked> PC</label>
                <label><input type="checkbox" class="f-platform" value="Xbox" checked> Xbox</label>
                <label><input type="checkbox" class="f-platform" value="PlayStation" checked> PlayStation</label>
            </div>
        </div>

        <div class="toolbar-right">
            <div class="field range">
                <label for="f-price">Preço até</label>
                <input type="range" id="f-price" min="0" max="399" value="399" step="10" />
                <span id="f-price-value">R$ 399,00</span>
            </div>
            <div class="field select">
                <label for="f-sort">Ordenar</label>
                <select id="f-sort">
                    <option value="relevance">Relevância</option>
                    <option value="price-asc">Preço: menor → maior</option>
                    <option value="price-desc">Preço: maior → menor</option>
                    <option value="name-asc">Nome: A → Z</option>
                    <option value="rating-desc">Avaliação</option>
                </select>
            </div>
        </div>
    </header>

