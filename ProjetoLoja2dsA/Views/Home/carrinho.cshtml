@{
    ViewData["Title"] = "Carrinho";
    // Se você usar Layout global, pode deixar assim ou remover essa linha.
    // Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/carrinho.css" />

<body class="carrinho">
    <div class="container py-5 text-light carrinho-container">
        <h1 class="mb-4">Carrinho de compras</h1>

        <div class="card bg-dark border-0 shadow-lg rounded-5 carrinho-card">
            <div class="card-body">
                <table class="table align-middle text-light">
                    <thead class="text-muted border-bottom border-secondary">
                        <tr>
                            <th>Produto</th>
                            <th class="text-center">Qtd</th>
                            <th class="text-end">Preço</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="cart-body">
                        @* O JS vai preencher isso aqui (inclusive a mensagem "Seu carrinho está vazio") *@
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Rodapé: total e botões -->
        <div class="cart-footer mt-4 d-flex align-items-center justify-content-between">
            <div class="total-area d-flex align-items-baseline gap-2">
                <h4 class="total-label mb-0">Total:</h4>
                <h4 id="cart-total" class="total-value mb-0">R$ 0,00</h4>
            </div>

            <div class="buttons-area d-flex gap-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light rounded-pill px-4">
                    <i class="bi bi-arrow-left"></i> Continuar comprando
                </a>
                <button class="btn btn-primary rounded-pill px-4" id="btn-finalizar" disabled>
                    Finalizar Compra
                </button>
            </div>
        </div>
    </div>

    @* Importa o JS do carrinho *@
    <script src="~/js/carrinho.js" asp-append-version="true"></script>
</body>
